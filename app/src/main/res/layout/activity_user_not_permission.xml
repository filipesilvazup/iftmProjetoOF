<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:gravity="center"
    tools:context=".ui.activity.UserNotPermissionActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:text="Você não possui permissões para acessar o app. Entre em contato com um adm através do e-mail: adminsprojeto@gmail.com"
        android:textSize="25dp"
        android:textStyle="italic|bold"
        android:textAlignment="center"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_button"
        android:text="Fazer LogOut"
        android:onClick="logOut"/>
</LinearLayout>